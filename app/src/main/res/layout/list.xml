<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="4dp"
		android:paddingTop="2dp"
		android:paddingRight="4dp"
		android:paddingBottom="2dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="2dp"
			android:orientation="vertical">
			<com.AbrishPhoenix.TheChat.MaxLinearLayout
				android:id="@+id/linear5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="6dp"
				android:orientation="vertical"
				app:maxWidth="325dp">
				<TextView
					android:id="@+id/who"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="2dp"
					android:paddingRight="8dp"
					android:text="User"
					android:textSize="14sp"
					android:textColor="#00ACFF" />
				<LinearLayout
					android:id="@+id/linear2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/fileContainer"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:layout_margin="4dp"
						android:padding="5dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal"
						android:visibility="gone"
						android:background="@drawable/editText1">
						<LinearLayout
							android:id="@+id/linear27"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:padding="4dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal"
							android:background="@drawable/circlePrimary">
							<TextView
								android:id="@+id/fileFormat"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text=".mp3"
								android:textSize="12sp"
								android:textColor="#FFFFFF" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/linear26"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="2dp"
							android:paddingRight="2dp"
							android:orientation="vertical"
							android:layout_weight="1">
							<TextView
								android:id="@+id/fileName"
								android:focusable="false"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:paddingLeft="4dp"
								android:paddingTop="4dp"
								android:paddingRight="4dp"
								android:paddingBottom="2dp"
								android:text="-- --"
								android:textSize="14sp"
								android:singleLine="true"
								android:textColor="?attr/textColor" />
							<TextView
								android:id="@+id/fileDesc"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingLeft="4dp"
								android:paddingTop="2dp"
								android:paddingRight="4dp"
								android:paddingBottom="4dp"
								android:text="size  -  format"
								android:textSize="11sp"
								android:singleLine="true"
								android:alpha="0.5"
								android:textColor="?attr/textColor" />
						</LinearLayout>
						<ImageView
							android:id="@+id/downloadFile"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:padding="5dp"
							android:src="@drawable/image_icon_27"
							android:scaleType="fitCenter" />
					</LinearLayout>
					<TextView
						android:id="@+id/msg"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="4dp"
						android:paddingRight="8dp"
						android:paddingBottom="4dp"
						android:text="hi"
						android:textSize="18sp"
						android:textColor="?attr/textColor" />
					<TextView
						android:id="@+id/time"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="--:--"
						android:textSize="10sp"
						android:alpha="0.5"
						android:layout_gravity="right"
						android:textColor="?attr/textColor" />
				</LinearLayout>
			</com.AbrishPhoenix.TheChat.MaxLinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
